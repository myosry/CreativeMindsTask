<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="@dimen/view_dimn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_msg"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:fontFamily="sans-serif"
                android:text="ابي اروح الهايبر وماعندى سياره ممكن حد يوديني "
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="298dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/view_dimn"
                android:layout_marginStart="@dimen/view_dimn"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/accpet_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_dimn"
                    android:drawableRight="@drawable/my_list_help_accepted_accept"
                    android:text="2 فزعة " />

                <TextView
                    android:id="@+id/help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_dimn"
                    android:drawableRight="@drawable/my_list_help_accepted_info_help_type"
                    android:text=" فزعة سيارة" />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_dimn"
                    android:drawableRight="@drawable/my_list_help_accepted_info_attendance"
                    android:text="رجال" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_dimn"
                    android:drawableRight="@drawable/my_list_help_accepted_time"
                    android:text="منذ ساعه" />
            </LinearLayout>

            <Button
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:background="@drawable/buttonshape"
                android:gravity="center"
                android:text="الغاء"
                android:textColor="#BC68AA"
                android:textSize="15sp"
                android:layout_marginBottom="@dimen/view_dimn" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon_avata"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:src="@drawable/type_car"
            app:civ_border_color="@color/gray_very_light"
            app:civ_border_width="2dp" />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>